<?xml version="1.0" encoding="UTF-8"?>

<style-scheme id="custom_colors" _name="Custom Colors" version="1.0">
	<author>roberoonska</author>
	<_description>custom color theme</_description>

<!-- Scribe Theme Generator 1.3 -->

<!-- COLORS -->
	<color name="$bgdark" value="#5b3a41"/>
	<color name="$bglight" value="#8c6a74"/>
	<color name="$highlight" value="#eeeeee"/>
	<color name="$white" value="#ffffff"/>

	<color name="$red" value="#a54242"/>
	<color name="$green" value="#8c9440"/>
	<color name="$yellow" value="#dfa752"/>
	<color name="$blue" value="#5f819d"/>
	<color name="$purple" value="#85678f"/>
	<color name="$cyan" value="#5e8d87"/>

	<color name="$lred" value="#cc6666"/>
	<color name="$lgreen" value="#b5bd68"/>
        <color name="$lyellow" value="#f0c674"/>
        <color name="$lblue" value="#81a2be"/>
        <color name="$lpurple" value="#b294bb"/>
        <color name="$lcyan" value="#8abeb7"/>

<!-- Global Settings -->
	<style name="text" foreground="$bgdark" background="white"/>
	<style name="cursor" foreground="$lred"/>
	<style name="current-line" background="$highlight"/>
	<style name="line-numbers" foreground="$bgdark" background="$white"/>
	<style name="selection" foreground="$bgdark" background="$highlight"/>

<!-- Bracket Matching -->
	<style name="bracket-match" foreground="$white" background="$lblue"/>
	<style name="bracket-mismatch" foreground="$white" background="$lred"/>
	<style name="search-match" foreground="$white" background="$lpurple"/>

<!-- Base syntax colors

Languages: plain, python, ruby, xml, html, ada, asp, awk, boo, c,
changelog, chdr, cmake, cpp, csharp, css, d, def, desktop, diff,
docbook, dosbatch, dot, dpatch, dtd, eiffel, erlang, forth, fortran,
gap, gtkrc, haddock, haskell, haskell-literate, idl, ini, java,
javascript, latex, libtool, lua, m4, makefile, msil, nermele, nsis,
objc, ocaml, ocl, octave, pascal, perl, php, pkgconfig, po, prolog,
R, rpmspec, scheme, sh, sql, t2t, tcl, texinfo, vala, vbnet, verilog,
vhdl, xslt, yacc

-->

	<style name="def:string" foreground="$green"/>
	<style name="def:character" foreground="$green"/>
	<style name="def:special-char" foreground="$green"/>
	<style name="def:number" foreground="$yellow"/>
	<style name="def:decimal" foreground="$yellow"/>
	<style name="def:floating-point" foreground="$yellow"/>
	<style name="def:complex" foreground="$yellow"/>
	<style name="def:base-n-integer" foreground="$yellow"/>
	<style name="def:boolean" foreground="purple"/>

	<style name="def:builtin" foreground="$cyan"/>
	<style name="def:keyword" foreground="$blue"/>
	<style name="def:function" foreground="$red"/>
	<style name="def:type" foreground="$lblue"/>
	<style name="def:preprocessor" foreground="$blue"/>
	<style name="def:identifier" foreground="$lpurple"/>
	<style name="def:operator" foreground="$lgreen"/>
	<style name="def:statement" foreground="$lyellow"/>

	<style name="def:constant" foreground="$cyan"/>
	<style name="def:special-constant" foreground="$lcyan"/>
	<style name="def:error" foreground="white" background="$lred"/>

<!-- Comments -->

	<style name="def:comment" foreground="$bglight"/>
	<style name="def:shebang" foreground="$bglight"/>
	<style name="def:doc-comment-element" foreground="$bglight"/>
	<style name="def:note" foreground="$bglight"/>

<!-- Latex -->
  	<style name="latex:display-math"          foreground="$yellow"/>
  	<style name="latex:command"               foreground="$green"/>
  	<style name="latex:include"               foreground="$purple"/>
  	<style name="latex:special-char"          foreground="$cyan"/>

</style-scheme>
